            "presentation": {
                "reveal": "always"
            }
        },
        {
            "label": "Orkestrate: Next Step",
            "type": "shell",
            "command": "echo 'Ask Copilot to execute next step'",
            "presentation": {
                "reveal": "always"
            }
        },
        {
